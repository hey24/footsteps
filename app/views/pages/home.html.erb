<% if !user_signed_in? %>
  <%= render 'shared/navbar' %>
<% end %>
<body class="splash">
  <div class="logo">
    <%# <div class="logo-title"> %>
      <h1>Footsteps</h1>
    <%# </div> %>
    <%# <div class="logo-tagline"> %>
      <h2>Connecting hikers one step at a time!</h2>
    <%# </div> %>
    <%# <div class="logo-icon">
      <i class="fa-solid fa-shoe-prints"></i>
    </div> %>
       <%= render "shared/footer" %>
  </div>
  <div class="searchbar">
    <%= simple_form_for :hike, url: hikes_path, method: :get do |f|%>
     <%= f.input :starting_point,
        as: :hidden,
        input_html: {data: {address_autocomplete_target: "address"}},
        wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
      %>
      <%= f.button :submit, class: "btn-yellow", value: "Find Hike", style: "width: 128px;"%>
    <% end %>

  <br>
  <br>
  <div class="down-arrow-flex">
    <div class="down-arrow-home">
      <p><i class="fa-solid fa-angle-down"></i><p>
    </div>
  </div>

  <br>
  <br>
  <br>
  <br>
  <br>
  <div class="homepage-content">
    <h2>🤝 Meet New People</h2>
    <p>Connect with other people who love hiking and meet your next hiking buddy!</p>
    <h2>🗺️ Plot Routes</h2>
    <p>Create hikes and plot routes on the map for your group to see where you are planning on going!</p>
    <h2>💬 Message Eachother</h2>
    <p>Message your hike group to organise your hike!</p>
  </div>
  <br>
  <br>
  <br>
  <br>
</body>
<% if user_signed_in? %>
  <footer>
<% else %>
  <footer hidden>
<% end %>
