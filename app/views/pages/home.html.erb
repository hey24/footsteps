<% if !user_signed_in? %>
  <%= render 'shared/navbar' %>
<% end %>
<body class="splash">
  <div class="logo">
    <%# <div class="logo-title"> %>
      <h1>Footsteps</h1>
    <%# </div> %>
    <%# <div class="logo-tagline"> %>
      <h2>Connecting hikers one step at a time</h2>
    <%# </div> %>
    <%# <div class="logo-icon">
